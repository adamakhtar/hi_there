<div class="container">
  <div class="page">
    <%= simple_form_for @course do |f| %>
      
      <div class="page-actions">
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to t('hi_there.common.actions.cancel'), course_path(@course), class: 'btn btn-default' %>
            <%= f.submit t('hi_there.common.actions.update'), class: 'btn btn-default' %>
          </div>  
        </div>
      </div>
      <div class="page-body">
        <%= f.input :title %>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="page">
    <%= form_tag url: course_path(1), method: :put do %>
      
      <div class="page-header">
        <h1 class="page-title"><%= t('hi_there.courses.new.title') %></h1>
      </div>

      <div class="page-actions">
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to t('hi_there.common.actions.cancel'), course_path(1), class: 'btn btn-default' %>
            <%= button_to t('hi_there.common.actions.save'), course_path(1), class: 'btn btn-default', method: :put %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label>Course title</label>
        <%= text_field_tag :title, "", class: 'form-control' %>
      </div>
    <% end %>
  </div>
</div>
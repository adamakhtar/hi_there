<div class="container">
  <div class="page">
    <%= simple_form_for @course do |f| %>
      <div class="page-header">
        <h1 class="page-title"><%= t('hi_there.courses.new.title') %></h1>
      </div>

      <div class="page-actions">
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to t('hi_there.common.actions.cancel'), course_path(1), class: 'btn btn-default' %>
            <%= f.submit t('hi_there.common.actions.save'), class: 'btn btn-default' %>
          </div>
        </div>
      </div>
      <%= f.input :title %>
    <% end %>
  </div>
</div>
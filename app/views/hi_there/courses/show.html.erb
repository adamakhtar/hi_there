<div class="container">
  <div class="page">
    <div class="page-header">
      <h1 class="page-title">How to lose weight in 7 days</h1>
    </div>

    <div class="page-actions">
      <div class="btn-toolbar">
        <div class="btn-group">
          <% if params[:published] %>
            <%= link_to t('hi_there.courses.actions.pause'), edit_course_path(1), class: 'btn btn-default' %>
            <%= link_to t('hi_there.courses.actions.terminate'), edit_course_path(1), class: 'btn btn-default' %>
          <% else %>
            <%= link_to t('hi_there.common.actions.edit'), edit_course_path(1), class: 'btn btn-default' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="page-body">
      <table class="table">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Delivered after (days)</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= link_to "The problem with diets today", course_email_path(1, 2) %></td>
            <td>1</td>
          </tr>

          <tr>
            <td><%= link_to "The biggest killer you could be facing", course_email_path(1, 2) %></td>
            <td>3</td>
          </tr>

          <tr>
            <td><%= link_to "How to avoid heart disease", course_email_path(1, 2) %></td>
            <td>5</td>
          </tr>

          <tr>
            <td><%= link_to "The easy way to create a nutritional diet", course_email_path(1, 2) %></td>
            <td>7</td>
          </tr>

          <tr>
            <td><%= link_to "Why longer workouts are actually less productive than shorter workouts.", course_email_path(1, 2) %></td>
            <td>9</td>
          </tr>

          <tr>
            <td><%= link_to "Now buy my amazing diet book", course_email_path(1, 2) %></td>
            <td>11</td>
          </tr>
        </tbody>
      </table>  
      <% unless params[:published] %>
        <div class="list-footer">
          <div class="btn-toolbar">
            <div class="btn-group">
              <%= link_to t('hi_there.courses.actions.add_email'), new_course_email_path(1), class: 'btn btn-default' %>
            </div>
          </div>
        </div>  
      <% end %>
    </div>
  </div>
</div>
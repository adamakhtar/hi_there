<div class="container">
  <%= simple_form_for [@course, @email] do |f| %>
    <div class="page">
      <div class="page-header">
        <h1 class="page-title"><%= link_to @course.title, course_path(@course) %></h1>
      </div>


      <div class="page-actions">
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to t('hi_there.common.actions.cancel'), course_email_path(@course, @email), class: 'btn btn-default' %>
            <%= f.submit t('hi_there.common.actions.update'), class: 'btn btn-default' %>
          </div>
        </div>
      </div>

      <div class="page-body">
        <%= f.input :subject %>
        <%= f.input :interval %>
        <%= f.input :body %>
      </div>
    </div>
  <% end %>
</div>

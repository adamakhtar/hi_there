<div class="container">
  <%= form_tag url: course_email_path(1,2), method: :put do %>
    <div class="page">
      <div class="page-header">
        <h1 class="page-title"><%= link_to "How to lose weight in 7 days", course_path(1) %></h1>
      </div>


      <div class="page-actions">
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to t('hi_there.common.actions.cancel'), course_email_path(1,2), class: 'btn btn-default' %>
            <%= button_to t('hi_there.common.actions.save'), course_email_path(1,2), class: 'btn btn-default' %>
          </div>
        </div>
      </div>

      <div class="page-body">

        <div class="email-header">
          <div class="email-subject">
            <h4><%= t('hi_there.emails.new.title') %></h4>
          </div>
        </div>

        <div class="form-group">
          <label>Subject</label>
          <%= text_field_tag :subject, "", class: 'form-control' %>
        </div>

        <div class="form-group">
          <label>Subject</label>
          <%= text_area_tag :subject, "", class: 'form-control' %>

        </div>
      </div>
    </div>
  <% end %>
</div>

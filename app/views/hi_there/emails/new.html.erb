<div class="container">
  <%= simple_form_for [@course, @email] do |f| %>
    <div class="page">
      <div class="page-header">
        <h1 class="page-title"><%= link_to "How to lose weight in 7 days", course_path(@course) %></h1>
      </div>


      <div class="page-actions">
        <div class="btn-toolbar">
          <div class="btn-group">
            <%= link_to t('hi_there.common.actions.cancel'), course_path(@course), class: 'btn btn-default' %>
            <%= f.submit t('hi_there.common.actions.save'), class: 'btn btn-default' %>
          </div>
        </div>
      </div>

      <div class="page-body">

        <div class="email-header">
          <div class="email-subject">
            <h4><%= t('hi_there.emails.new.title') %></h4>
          </div>
        </div>

        <%= f.input :subject %>
        <%= f.input :interval %>
        <%= f.input :body %>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="page">
    <div class="page-header">
      <h1 class="page-title"><%= link_to "How to lose weight in 7 days", course_path(@course) %></h1>
    </div>


    <div class="page-actions">
      <div class="btn-toolbar">
        <div class="btn-group">
          <%= link_to t('hi_there.common.actions.edit'), edit_course_email_path(@course, @email), class: 'btn btn-default' %>
        </div>
      </div>
    </div>

    <div class="page-body">

      <div class="email-header">
        <div class="email-subject">
          <h4><%= @email.subject %></h4>
        </div>
        <div class="email-interval">
          <h4>Delivered on day <%= t('hi_there.emails.delivered_on_day', interval: @email.interval) %></h4>
        </div>
      </div>

      <div class="email-body">
        <%= simple_format @email.body %>
      </div>
    </div>
  </div>
</div>
